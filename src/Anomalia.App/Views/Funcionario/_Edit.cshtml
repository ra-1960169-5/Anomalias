@model FuncionarioVM
@{
    ViewBag.Title = "Editar Funcionario";
}

<div class="container-fluid  p-4">
    <div class="modal-header">
        <h4 class="modal-title text-center">@ViewData["Title"]</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Voltar"></button>
    </div>
    <div class="card-body">
        <form asp-controller="Funcionario" asp-action="Edit" method="post" class="flex-fill">
            <vc:summary />
            <div class="form-group row mb-3">
                <label asp-for="Nome" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Nome" class="form-control">
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="SetorId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="SetorId" name="SetorId" asp-items="@(new SelectList(ViewBag.Setores, "Id", "Descricao",selectedValue:Model.SetorId))" class="form-select">
                        <option value="">SELECIONE O SETOR</option>
                    </select>
                    <span asp-validation-for="SetorId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="CargoId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="CargoId" name="CargoId" asp-items="@(new SelectList(ViewBag.Cargos, "Id", "Descricao",selectedValue:Model.CargoId))" class="form-select">
                        <option value="">SELECIONE O CARGO</option>
                    </select>
                    <span asp-validation-for="CargoId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Ativo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10 d-flex">
                    <input type="checkbox" asp-for="Ativo" />
                    <span asp-validation-for="Ativo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Gestor" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10 d-flex">
                    <input type="checkbox" asp-for="Gestor" />
                    <span asp-validation-for="Gestor" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center">
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Atualizar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Voltar</button>
                </div>
            </div>
        </form>
    </div>
</div>
