@model SetorVM
@{
    ViewData["Title"] = "Editar Setor ";
}

<div class="modal-header">
    <h4 class="modal-title text-center">@ViewData["Title"]</h4>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Voltar"></button>
</div>
<form asp-action="Edit" asp-controller="Setor" method="post" class="mt-3" role="dialog">
    <div class="modal-body">
        <vc:summary></vc:summary>
        <div class="text-center mb-2">
            <div class="col-md-offset-2">
                <input type=hidden asp-for="Id" />
                <input asp-for="Descricao" class="form-control" placeholder="Descrição do Setor">
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mb-2">
            <select asp-for="GestorId" name="GestorId" asp-items="@(new SelectList(ViewBag.Funcionarios, "Id", "Nome",selectedValue:Model.GestorId))" class="form-select">
                <option value="">NENHUM</option>
            </select>
            <span asp-validation-for="GestorId" class="text-danger"></span>
        </div>
        <div class="mt-2 text-center">
            <div class="col-md-offset-2">
                <input type="submit" class="btn btn-dark" value="Atualizar" />
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Voltar</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
