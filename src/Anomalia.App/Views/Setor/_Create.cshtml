@model SetorVM
@{
    ViewData["Title"] = "Novo Setor ";
}

<div class="modal-header">
    <h4 class="modal-title text-center">@ViewData["Title"]</h4>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Voltar"></button>
</div>
<form asp-action="create" asp-controller="setor" method="post" class="mt-3" role="dialog">
    <div class="modal-body">
        <vc:summary/>
        <div class="text-center mb-2">
            <div class="col-md-offset-2">
                <input asp-for="Descricao" class="form-control" placeholder="Descrição do Setor">
            </div>
        </div>     
        <div class="mt-2 text-center">
            <div class="col-md-offset-2">
                <input type="submit" class="btn btn-dark" value="Enviar" />
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Voltar</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
