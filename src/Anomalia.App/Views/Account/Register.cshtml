@model NovoFuncionarioVM;
@{
    ViewData["Title"] = "Nova Conta";
}
<div class="container content">
    <div class="card-body d-flex justify-content-center align-items-center h-100">
        <div class="w-50">
            <div class="card p-4">
                <h4>@ViewData["Title"]</h4>
                <vc:summary></vc:summary>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group mb-3">
                        <input class="form-control form-control-lg" type="text" name="Nome" placeholder="NOME" asp-for="Nome">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input class="form-control form-control-lg" type="text" name="Email" placeholder="E-MAIL" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <select asp-for="SetorId" name="SetorId" asp-items="@(new SelectList(Model.Setores, "Id", "Descricao"))" class="form-select">
                            <option value="">SELECIONE O SETOR</option>
                        </select>
                        <span asp-validation-for="SetorId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <select asp-for="CargoId" name="CargoId" asp-items="@(new SelectList(Model.Cargos, "Id", "Descricao"))" class="form-select">
                            <option value="">SELECIONE O CARGO</option>
                        </select>
                        <span asp-validation-for="CargoId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input class="form-control form-control-lg" type="password" name="Password" placeholder="SENHA" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input class="form-control form-control-lg" type="password" name="ConfirmPassword" placeholder="CONFIRME A SENHA" asp-for="ConfirmPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-start justify-items-center gap-2">
                        <label class="fs-6 fw-bold" asp-for="Gestor"></label>
                        <input type="checkbox" asp-for="Gestor" />
                        <span asp-validation-for="Gestor" class="text-danger"></span>
                    </div>
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-danger">Enviar</button>
                        <a class="btn  btn-dark" asp-controller="Home" asp-action="Index">Voltar</a>
                    </div>                 
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}
