
@model LoginUserVM;
@{
    ViewData["Title"] = "Login";
}


<div class="container content  d-flex justify-content-center align-items-center">
    <div class="login-content">
        <div class="card-body">
            <div class="card rounded-card p-4">
                <vc:summary />
                <div class="d-flex flex-row aling-items-center justify-content-center">
                    <div class="font-monospace border fs-4 fw-bold p-3 m-4 bg-dark rounded-pill">
                        <span class="bg-white text-dark rounded shadow px-2 me-2">A</span>
                        <a asp-controller="Home" asp-action="index" class="text-danger text-decoration-none">Anomalias</a>
                    </div>
                </div>
                <form id="account" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div class="d-flex flex-column justify-content-between gap-4 mb-2">
                        <div class="form-group">
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="E-mail">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="Senha">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control d-flex justify-content-end ">
                                <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-password">Esqueceu a Senha?</a>
                            </div>
                        </div>
                        <div class="d-flex">
                            <button type="submit" class="flex-fill btn btn-lg btn-danger">Entrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
