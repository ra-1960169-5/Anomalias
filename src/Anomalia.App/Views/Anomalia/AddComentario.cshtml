@model AddComentarioVM;
@{
    ViewData["Title"] = "AdicionarComentário";
}

<div class="container content">
    <div class="card-body">
        <div class="accordion" id="accordionComentario">
            <div class="accordion-item">
                <div class="accordion-header" id="heading2">
                    <button class="accordion-button accordion-color-red" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2" aria-expanded="true" aria-controls="collapse2">
                        <span class="fw-bolder">ADICIONAR COMENTÁRIOS</span>
                    </button>
                </div>
                <div id="collapse2" class="accordion-collapse collapse show" aria-labelledby="heading2" data-bs-parent="#accordionComentario">
                    <div class="accordion-body">
                        <vc:summary />
                        <div class="form-row">
                            <form method="post" asp-action="AddComentario" asp-controller="Anomalia"  enctype="multipart/form-data">
                                <input type="hidden" asp-for="@Model.AnomaliaId" />
                                <div class="row mb-2">
                                    <div class="col-sm-3">
                                        <label class="control-label">Comentário:</label>
                                    </div>
                                    <div class="col-sm">
                                        <textarea class="form-control" name="Descricao" placeholder="" asp-for="@Model.Descricao"> </textarea>
                                        <span asp-validation-for="@Model.Descricao" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-sm-3">
                                        <label class="control-label">Anexo:</label>
                                    </div>
                                    <div class="col-sm">
                                        <input type="file" id="Anexo" asp-for="@Model.Anexo">
                                        <span asp-validation-for="@Model.Anexo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="form-group d-flex flex-column">
                                        <div class="col-sm-10 col-sm-offset-2">
                                            <button type="submit" class="btn btn-danger">Adicionar</button>
                                            <a class="btn-dark btn" href="javascript:window.history.back();">Voltar</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}
